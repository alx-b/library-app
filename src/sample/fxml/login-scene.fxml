<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>

<GridPane xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <Label text="Username" GridPane.rowIndex="0"/>
    <TextField fx:id="usernameField" GridPane.rowIndex="1"/>
    <Label text="Password" GridPane.rowIndex="2"/>
    <PasswordField fx:id="passwordField" GridPane.rowIndex="3"/>
    <Text fx:id="infoText" GridPane.rowIndex="4"/>
    <HBox GridPane.rowIndex="5" spacing="20">
        <Button text="Log in" onAction="#logIn"/>
        <Button text="New account" onAction="#launchCreateAccountScene"/>
    </HBox>
</GridPane>